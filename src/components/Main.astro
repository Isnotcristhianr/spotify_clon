---
import { playlists } from "@lib/data";
import PlaylistItem from "@components/PlaylistItem.astro";
import PlayListCard from "@components/PlayListCard.astro";
import Greeting from "@components/Greeting.svelte";
---

<div
  id="playlist-container"
  class="relative transition-all duration-1000 bg-green-400 rounded-xl"
>

  <!-- page header -->

  <div class="relative z-10 px-4 p-2">
    <!-- Saludos -->
    <Greeting client:visible />
    <p class="text-white">Encuentra tu album favorito</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      {playlists.map((playlist) => <PlaylistItem playlist={playlist} />)}
    </div>
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-b from-transparent to-zinc-950 via-zinc-900/80 rounded-xl"
  >
  </div>
</div>
